<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/lightgrey">


        <ImageView
            android:id="@+id/imageView68"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:src="@drawable/horizonlogotab" />

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_toEndOf="@+id/imageView68"
            android:layout_alignBottom="@+id/imageView68"
            android:layout_marginLeft="20dp"
            >
        </TabWidget>

        <TextView
            android:id="@+id/companyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:text="Horizon Engineering solutions"
            android:textColor="@color/white"
            android:layout_gravity="right"
            android:foregroundGravity="right"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:text="Admin"
            android:textColor="@color/white"
            android:paddingTop="0dp"
            android:layout_gravity="right"
            android:layout_alignParentEnd="true"
            android:paddingLeft="0dp"
            android:layout_below="@+id/companyName"
            android:layout_above="@android:id/tabcontent"
            android:layout_alignStart="@+id/companyName" />
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:longClickable="false"
            android:background="@color/white"
            android:measureAllChildren="false"
            android:layout_below="@+id/imageView68"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true">

        </FrameLayout>
    </RelativeLayout>
</TabHost>